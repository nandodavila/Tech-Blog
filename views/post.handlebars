<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  {{#if logged_in}}
  <div>
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-comment">Comment</label>
        <textarea class="form-input" type="text" id="post-comment" name="post-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
    <script src="./js/comment.js"></script>
  </div>
  {{/if}}
  <p>
   {{#each comment as |comment| }}
    <div class="row mb-4 comment">
      <div class="col-md-5">
        <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
      </div>
      <div class="col-md-7">
        <p>
        {{comment.comment}}
        </p>
      </div>
    </div>
{{/each}}

  </p>
  
</div>
</div>
